<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <template class="EuphonicaDynamicPlaylistEditorView" parent="GtkWidget">
    <object class="AdwAlertDialog" id="overwrite_dialog">
      <property name="heading" translatable="yes">Overwrite Existing Playlist?</property>
      <property name="body" translatable="yes">There is already a Dynamic Playlist with this name. Would you like to overwrite it?.</property>
      <property name="default-response">save</property>
      <property name="close-response">cancel</property>
      <responses>
        <response id="cancel" translatable="yes">_Cancel</response>
        <response id="overwrite" translatable="yes" appearance="suggested">_Overwrite</response>
      </responses>
    </object>
    <object class="AdwAlertDialog" id="unsaved_dialog">
      <property name="heading" translatable="yes">Save Changes?</property>
      <property name="body" translatable="yes">You have unsaved changes in the editor. Would you like to save them?</property>
      <property name="default-response">save</property>
      <property name="close-response">cancel</property>
      <responses>
        <response id="cancel" translatable="yes">_Cancel</response>
        <response id="discard" translatable="yes" appearance="destructive">_Discard</response>
        <response id="save" translatable="yes" appearance="suggested">_Save</response>
      </responses>
    </object>
    <object class="AdwAlertDialog" id="edit_cover_dialog">
      <property name="heading" translatable="yes">Edit Cover</property>
      <property name="close-response">cancel</property>
      <responses>
        <response id="cancel" translatable="yes">_Cancel</response>
        <response id="clear" translatable="yes" appearance="destructive">Clea_r</response>
        <response id="replace" translatable="yes" appearance="suggested">_Replace</response>
      </responses>
    </object>
    <child>
      <object class="AdwToolbarView">
        <child type="top">
          <object class="AdwHeaderBar">
            <property name="show-back-button">false</property>
            <child type="start">
              <object class="GtkButton" id="exit_btn">
                <property name="icon-name">left-symbolic</property>
              </object>
            </child>
            <property name="title-widget">
              <object class="AdwWindowTitle">
                <property name="title" translatable="true">Edit Dynamic Playlist</property>
              </object>
            </property>
            <child type="end">
              <object class="GtkButton" id="save_btn">
                <child>
                  <object class="GtkStack" id="save_btn_content">
                    <child>
                      <object class="GtkStackPage">
                        <property name="name">label</property>
                        <property name="child">
                          <object class="GtkLabel">
                            <property name="label" translatable="true">Save</property>
                          </object>
                        </property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkStackPage">
                        <property name="name">spinner</property>
                        <property name="child">
                          <object class="AdwSpinner"/>
                        </property>
                      </object>
                    </child>
                  </object>
                </child>
                <style>
                  <class name="suggested-action"/>
                </style>
              </object>
            </child>
          </object>
        </child>
        <property name="content">
          <object class="AdwBreakpointBin">
            <property name="width-request">240</property>
            <property name="height-request">240</property>
            <child>
              <object class="AdwBreakpoint">
                <condition>max-width: 550px</condition>
                <setter object="fetch_options" property="orientation">1</setter>
                <setter object="infobox" property="orientation">1</setter>
              </object>
            </child>
            <property name="child">
              <object class="GtkBox">
                <property name="vexpand">true</property>
                <property name="orientation">1</property>
                <property name="hexpand">true</property>
                <child>
                  <!-- Header. Contains two parts: a collapsible infobox and an
                       always-visible action button row beneath it.
                       This allows the user much more vertical space when scrolling
                       through the album contents.
                  -->
                  <object class="GtkRevealer" id="infobox_revealer">
                    <property name="reveal-child">true</property>
                    <property name="transition-type">slide-down</property>
                    <property name="child">
                      <object class="GtkBox" id="infobox">
                        <property name="margin-start">6</property>
                        <property name="margin-end">6</property>
                        <property name="spacing">6</property>
                        <property name="orientation">1</property>
                        <child>
                          <object class="GtkBox">
                            <property name="spacing">6</property>
                            <child>
                              <object class="GtkButton" id="cover_btn">
                                <property name="halign">start</property>
                                <property name="valign">start</property>
                                <property name="overflow">hidden</property>
                                <property name="tooltip-text" translatable="true">Click to edit cover image</property>
                                <style>
                                  <class name="padding-0"/>
                                  <class name="flat"/>
                                </style>
                                <child>
                                  <object class="GtkImage" id="cover">
                                    <property name="pixel-size">36</property>  <!-- FIXME: find a better way than hardcoding Entry height with h3 style. -->
                                    <property name="resource">/io/github/htkhiem/Euphonica/albumart-placeholder.svg</property>
                                  </object>
                                </child>
                              </object>
                            </child>
                            <child>
                              <object class="GtkEntry" id="title">
                                <property name="placeholder-text" translatable="true">Playlist name</property>
                                <property name="hexpand">true</property>
                                <style>
                                  <class name="title-2"/>
                                  <class name="error"/> <!-- Upon creation the title is empty which is invalid -->
                                </style>
                              </object>
                            </child>
                          </object>
                        </child>

                        <child>
                          <object class="GtkSeparator"/>
                        </child>

                        <child>
                          <object class="GtkBox">
                            <property name="orientation">1</property>
                            <property name="spacing">6</property>
                            <property name="hexpand">true</property>
                            <child>
                              <object class="GtkScrolledWindow">
                                <property name="propagate-natural-height">true</property>
                                <child>
                                  <object class="AdwWrapBox" id="rules_box">
                                    <property name="valign">start</property>
                                    <property name="hexpand">true</property>
                                    <property name="child-spacing">6</property>
                                    <property name="line-spacing">6</property>

                                    <child>
                                      <object class="GtkButton" id="add_rule_btn">
                                        <child>
                                          <object class="GtkBox">
                                            <property name="spacing">6</property>
                                            <child>
                                              <object class="GtkImage">
                                                <property name="icon-name">list-add-symbolic</property>
                                              </object>
                                            </child>
                                            <child>
                                              <object class="GtkLabel">
                                                <property name="label" translatable="true">Rule</property>
                                              </object>
                                            </child>
                                          </object>
                                        </child>
                                      </object>
                                    </child>
                                  </object>
                                </child>
                              </object>
                            </child>

                            <child>
                              <object class="GtkSeparator"/>
                            </child>

                            <child>
                              <object class="GtkScrolledWindow">
                                <property name="propagate-natural-height">true</property>
                                <child>
                                  <object class="AdwWrapBox" id="ordering_box">
                                    <property name="valign">start</property>
                                    <property name="hexpand">true</property>
                                    <property name="child-spacing">6</property>
                                    <property name="line-spacing">6</property>

                                    <child>
                                      <object class="GtkMenuButton" id="add_ordering_btn">
                                        <child>
                                          <object class="GtkBox">
                                            <property name="spacing">6</property>
                                            <child>
                                              <object class="GtkImage">
                                                <property name="icon-name">list-add-symbolic</property>
                                              </object>
                                            </child>
                                            <child>
                                              <object class="GtkLabel">
                                                <property name="label" translatable="true">Ordering</property>
                                              </object>
                                            </child>
                                          </object>
                                        </child>
                                      </object>
                                    </child>
                                  </object>
                                </child>
                              </object>
                            </child>

                            <child>
                              <object class="GtkSeparator"/>
                            </child>

                            <child>
                              <object class="GtkBox" id="fetch_options">
                                <property name="spacing">6</property>
                                <child>
                                  <object class="GtkDropDown" id="refresh_schedule">
                                    <property name="halign">start</property>
                                    <property name="model">
                                      <object class="GtkStringList">
                                        <items>
                                          <item translatable="yes">No auto-refresh</item>
                                          <item translatable="yes">Refresh hourly</item>
                                          <item translatable="yes">Refresh daily</item>
                                          <item translatable="yes">Refresh weekly</item>
                                          <item translatable="yes">Refresh monthly</item>
                                          <item translatable="yes">Refresh yearly</item>
                                        </items>
                                      </object>
                                    </property>
                                  </object>
                                </child>
                                <child>
                                  <object class="GtkBox">
                                    <property name="spacing">6</property>
                                    <child>
                                      <object class="GtkBox">
                                        <style>
                                          <class name="linked"/>
                                        </style>
                                        <child>
                                          <object class="GtkDropDown" id="limit_mode">
                                            <property name="model">
                                              <object class="GtkStringList">
                                                <items>
                                                  <item translatable="yes">No limit</item>
                                                  <item translatable="yes">Fetch first</item>
                                                </items>
                                              </object>
                                            </property>
                                          </object>
                                        </child>
                                        <child>
                                          <object class="GtkSpinButton" id="limit">
                                            <property name="visible">false</property>
                                            <property name="digits">0</property>
                                            <property name="adjustment">
                                              <object class="GtkAdjustment">
                                                <property name="lower">1</property>
                                                <property name="upper">65536</property> <!-- Any more kind of defeats the purpose of a limit -->
                                                <property name="value">10</property>
                                                <property name="page-increment">1</property>
                                                <property name="step-increment">10</property>
                                              </object>
                                            </property>
                                          </object>
                                        </child>
                                      </object>
                                    </child>
                                    <child>
                                      <object class="GtkLabel" id="limit_unit">
                                        <property name="label" translatable="true">songs</property>
                                        <property name="visible">false</property>
                                      </object>
                                    </child>
                                  </object>
                                </child>
                              </object>
                            </child>
                          </object>
                        </child>
                      </object>
                    </property>
                  </object>
                </child>
                <child>
                  <!-- The always-visible action row -->
                  <object class="GtkCenterBox">
                    <style>
                      <class name="padding-6"/>
                    </style>
                    <property name="start-widget">
                      <object class="GtkBox" id="counts">
                        <property name="spacing">6</property>
                        <child>
                          <object class="GtkImage">
                            <property name="icon-name">music-note-single-symbolic</property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkLabel" id="track_count">
                            <property name="label">0</property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkSeparator">
                            <style>
                              <class name="spacer"/>
                            </style>
                          </object>
                        </child>
                        <child>
                          <object class="GtkImage">
                            <property name="icon-name">hourglass-symbolic</property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkLabel" id="runtime">
                            <property name="label">00:00</property>
                          </object>
                        </child>
                      </object>
                    </property>
                    <property name="end-widget">
                      <object class="GtkBox">
                        <property name="spacing">6</property>
                        <child>
                          <object class="GtkButton" id="refresh_btn">
                            <property name="label" translatable="true">Refresh</property>
                            <style>
                              <class name="suggested-action"/>
                            </style>
                          </object>
                        </child>
                        <child>
                          <object class="GtkToggleButton" id="collapse_infobox">
                            <property name="icon-name">up-symbolic</property>
                            <style>
                              <class name="flat"/>
                            </style>
                          </object>
                        </child>
                      </object>
                    </property>
                  </object>
                </child>
                <child>
                  <object class="GtkSeparator"/>
                </child>
                <child>
                  <object class="GtkScrolledWindow">
                    <property name="height-request">50</property>
                    <property name="hscrollbar-policy">never</property>
                    <property name="vscrollbar-policy">automatic</property>
                    <property name="propagate-natural-height">true</property>
                    <property name="has-frame">false</property>
                    <property name="vexpand">true</property>
                    <property name="child">
                      <object class="GtkStack" id="content_pages">
                        <child>
                          <object class="GtkStackPage">
                            <property name="name">no-rule</property>
                            <property name="child">
                              <object class="AdwStatusPage">
                                <property name="title" translatable="true">No Rules</property>
                                <property name="description" translatable="true">Dynamic playlists are defined by a set of query rules instead of a fixed song list. Try adding one, then tap Refresh.</property>
                              </object>
                            </property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkStackPage">
                            <property name="name">empty</property>
                            <property name="child">
                              <object class="AdwStatusPage">
                                <property name="title" translatable="true">No Matches</property>
                                <property name="description" translatable="true">Try relaxing your rules.</property>
                              </object>
                            </property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkStackPage">
                            <property name="name">spinner</property>
                            <property name="child">
                              <object class="AdwSpinner"/>
                            </property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkStackPage">
                            <property name="name">content</property>
                            <property name="child">
                              <object class="GtkListView" id="content">
                                <property name="show-separators">true</property>
                                <style>
                                  <class name="no-bg"/>
                                </style>
                              </object>
                            </property>
                          </object>
                        </child>
                      </object>
                    </property>
                  </object>
                </child>
              </object>
            </property>
          </object>
        </property>
      </object>
    </child>
  </template>
</interface>
